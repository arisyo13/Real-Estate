<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/pictureCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/zipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:fontFamily="@font/gothamssm_book"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/pictureCardView"
            app:layout_constraintTop_toBottomOf="@+id/priceView"
            tools:text="1188DH" />

        <TextView
            android:id="@+id/cityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/gothamssm_book"
            android:text="Amstelveen"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/zipView"
            app:layout_constraintTop_toBottomOf="@+id/priceView" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothamssm_medium"
            android:text="$"
            android:textColor="@color/strong"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/pictureCardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothamssm_medium"
            android:text="4000"
            android:textColor="@color/strong"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center|fill_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pictureCardView">

            <ImageView
                android:id="@+id/imageBed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/ic_bed"
                app:tint="#8A8A8A"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/bedroomsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:fontFamily="@font/gothamssm_book"
                android:text="0"
                android:textColor="@color/medium"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageBath"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/ic_bath"
                app:tint="#8A8A8A" />

            <TextView
                android:id="@+id/bathroomsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:fontFamily="@font/gothamssm_book"
                android:text="0"
                android:textColor="@color/medium"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageSize"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/ic_layers"
                app:tint="#8A8A8A" />

            <TextView
                android:id="@+id/sizeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:fontFamily="@font/gothamssm_book"
                android:text="0"
                android:textColor="@color/medium"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/ic_location"
                app:tint="#8A8A8A" />

            <TextView
                android:id="@+id/distanceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.005"
                android:fontFamily="@font/gothamssm_book"
                android:text="0"
                android:textColor="@color/medium"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:fontFamily="@font/gothamssm_book"
                android:text="km"
                android:textColor="@color/medium"
                android:textSize="10sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>